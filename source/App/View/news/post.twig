{% extends wrapper %}

{% block content %}
  <div class="main-content">
	
    <div class="container index-content">
        <article class="col-xs-12 col-sm-9 col-ml-9 cpl-lg-9">
        	<div class="one-posts">
        		{% if post.logo is not empty %}
             		<img src="/img/{{ post.logo }}" alt="{{ post.title }}" class="posts-img">
                {% endif %}
                
        		<ul class="breadcrumbs">
					{% set pageTitle = '' %}
				    <a href="/" class="bread-home"></a>
				    {% for path in settings.navigation %}
				    	{% if loop.last %}
				        	<li>{{ path.title }}</li>
				    		{% set pageTitle = path.title %}
				    	{% else %}
				    		<li><a href="{{ path.url }}">{{ path.title }}</a></li>
				    	{% endif %}
				    {% endfor %}
				</ul>
			
				<div class="posts-data">{{ post.date_posted | date("d/m") }}</div>
				<div class="posts-title">{{ post.title }}</div>
				<div class="posts-line"></div>
                <div class="posts-text">
                    <p>{{ post.body | raw }}</p>
                </div>
                <div class="posts-line"></div>
                <div class="posts-share">
                    <span>Share:</span>
                    <a style="cursor:pointer;" class="share-facebook" 
	                    	data-image-source="/img/{{ post.logo }}"
	                    	data-item-source="/news/{{ post.id }}"
	                    	data-item-title="{{ post.title }}"
	                    	onClick="shareFb(this)">
	                </a>
	                <a href="http://vk.com/share.php?url={{ settings.host_name }}/news/{{ post.id }}" target="_blank" class="share-twitter"></a>
                </div>
            </div>

            <!-- img src="/img/vk_facebook.png" style="width: 100%;" -->
				
        </article>
        
		{% include sidepanel %}
		
    </div>
</div>

{% endblock %}