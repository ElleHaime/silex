{% extends wrapper %}

{% block content %}
  <div class="main-content">
	
    <div class="container index-content">
        <article class="col-xs-12 col-sm-9 col-ml-9 cpl-lg-9">
        
        	{% include navigation %}
            
            <div class="row">
	        	{% for post in trainings %}
		            <div class="col-sm-12 col-md-4 col-lg-4">
	                	<a href="/training/{{ post.url_name }}" class=" trainings-item">
	                		<img src="/img/training/{{ post.url_name }}/{{ post.image }}" alt="{{ post.image_alter_text}}">
	                		<div class="trainings-title">
	                			<i></i>
	                			{{ post.name }}
	                		</div>
	                		<div class="trainings-text">
	                			{{ post.intro }}...  <span class="continue">Continue »</span>
	                		</div>
	                	</a>
                	</div>
		        {% endfor %}
		    </div>
		    <div class="posts-line"></div>
            <div class="posts-share">
                <span>Share:</span>
	                <a style="cursor:pointer;" class="share-facebook" 
                    	data-image-source=""
                    	data-item-source="/training"
                    	data-item-title="Наши тренинги"
                    	onClick="shareFb(this)">
	                </a>
	                <a href="http://vk.com/share.php?url={{ settings.host_name }}/training" target="_blank" class="share-twitter"></a>
            </div>
        </article>
        
		{% include sidepanel %}
		
    </div>
</div>

{% endblock %}