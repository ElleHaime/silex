		<!-- alerts block --> 	
			{% if app.session.flashbag.has('message') %}
				{% for flash in app.flashbag.get('message') %}
					<div class="alert alert-{{ flash.type }}">
						<button type="button" class="close" data-dismiss="alert">&times;</button>
				        <h4>{{ flash.type|capitalize }}</h4>
				        {{ flash.content }}
				    </div>
				{% endfor %}
			{% endif %}
			<div class="alert" id="block_notifications" style="display:none;">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
		        <span id="flash_noti_content"></span>
		    </div>
	    <!--/alerts block-->